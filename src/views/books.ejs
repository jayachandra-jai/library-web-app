<html>

<head>
    <title>Books</title>
    <link rel="stylesheet" type="text/css" href="../css/main.css">
</head>

<body>

    <nav>
        <a href="/books">Books</a>
        <a href="/authors">Authors</a>
        <a href="/logout" class="right-item">Logout</a>
        <a class="right-item">User: <%=user_name %></a>
    </nav>
    <div class="container">
        <h1 class="title-head">Our Books</h1>


        <% for(var data of books) {%>
           
            <a href="/books/<%=data.book_id %>">
            <div class="card">
                    <div class="card-body">
                        <div class="flex-container">
                            <div>
                                <img src="../<%= data.pic_url %>" class="book_img">
                            </div>
                            <div>
                                <h3><%= data.title %></h3>
                                <h4>Author: <%= data.author_name %></h4>
                            </div>
                        </div>
                    </div>
            </div>
        </a>
            <%} %>
        
    </div>
</body>

</html>